\ProvidesPackage{tikzStyle}

\usetikzlibrary{calc,angles,intersections,matrix}

% Shift previously defined coordinates. Usage:
% --------------------------------------------
% \begin{scope}[every coordinate/.style={shift={(x,y)}}]
%   \draw ([c]A) -- ([c]B);
% \end{scope}
% ------
\tikzset{%
  c/.style={every coordinate/.try}%
}

% Kreisbogen um Punkt
\tikzset{partial ellipse/.style args={#1:#2:#3}{insert path={+ (#1:#3) arc (#1:#2:#3)}}}

% Rechter Winkel
\newcommand*{\rechterWinkel}[3]{% #1 = point, #2 = start angle, #3 = radius
  \draw (#1) [partial ellipse=#2:#2+90:#3];
  \begin{scope}[every coordinate/.style={shift={(#2+45:#3/2)}}]
    \fill ([c]#1) circle (0.5pt);
  \end{scope}
}

% Mark lines as parallel
\newcommand*{\markAsParallel}[3]{% #1 = point, #2 = rotation angle, #3 = size
  \begin{scope}[rotate=#2]
    \draw ($(#1)+(-#3,-#3/3)$) -- ($(#1)+(#3,-#3/3)$);
    \draw ($(#1)+(-#3,#3/3)$) -- ($(#1)+(#3,#3/3)$);
  \end{scope}
}
