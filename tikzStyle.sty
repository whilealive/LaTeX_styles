\ProvidesPackage{tikzStyle}

\RequirePackage{tikz}
\usetikzlibrary{calc,angles,intersections,arrows.meta}

% Shift previously defined coordinates. Usage:
% --------------------------------------------
% \begin{scope}[every coordinate/.style={shift={(x,y)}}]
%   \draw ([c]A) -- ([c]B);
% \end{scope}
% ------
\tikzset{c/.style={every coordinate/.try}}

% circle arc around point
\tikzset{partial ellipse/.style args={#1:#2:#3}{insert path={+ (#1:#3) arc (#1:#2:#3)}}}

% right angle
% \RechterWinkel{A--B--C}{4mm}{thick,red};
\newcommand*{\RechterWinkel}[3]{% #1 = three points B--A--C, #2 = radius, #3 = style
  \draw[#3] pic[pic text=$\cdot$, draw, angle radius=#2, angle eccentricity=.5] {angle=#1};
}

% Point that won't get scaled
\newcommand*{\Point}[3]{% #1 = coordinate, #2 = node text, #3 = node position
  \draw[fill] (#1) node[circle,fill,inner sep=1.2pt] {} node[#3] {#2};
}

% nicer arrow tip default
\tikzset{>={Triangle[angle=45:1pt 10]}}
