% Mark lines as parallel
% use as: \markAsParallel{P}{90}{1.5mm};
\newcommand*{\markAsParallel}[3]{% #1 = coordinate, #2 = rotation angle, #3 = size
  \begin{scope}[rotate=#2]
    \draw ($(#1)+(-#3,-#3/3)$) -- ($(#1)+(#3,-#3/3)$);
    \draw ($(#1)+(-#3,#3/3)$) -- ($(#1)+(#3,#3/3)$);
  \end{scope}
}

% Point that won't get scaled
\newcommand*{\Point}[3]{% #1 = coordinate, #2 = node text, #3 = node position
  \draw[fill] (#1) node[circle,fill,inner sep=1.8pt] {} node[#3] {#2};
  %\draw[fill] (#1) coordinate(#2) node[circle,fill,inner sep=1pt] {} node[#3] {$#2$};
}
