\ProvidesPackage{basicDocumentStyle}

\RequirePackage[T1]{fontenc}
\RequirePackage[utf8x]{inputenc}
\RequirePackage[ngerman]{babel}
\setlength{\parindent}{0pt}

% fonts
\RequirePackage{lmodern}

% additional symbols etc.
\RequirePackage[babel=true]{microtype}
\RequirePackage{siunitx}
\sisetup{per-mode=symbol}
\RequirePackage{eurosym}
\RequirePackage{url}

% header/footer (KOMA-Script)
\RequirePackage[headsepline,plainheadsepline]{scrlayer-scrpage}
\pagestyle{scrheadings}
\setkomafont{pageheadfoot}{\normalfont}

% various KOMA script stuff
\RedeclareSectionCommand[beforeskip=2\baselineskip,afterskip=\baselineskip]{section}
\RedeclareSectionCommand[beforeskip=2\baselineskip]{subsection}
\RedeclareSectionCommand[beforeskip=1\baselineskip,afterskip=1sp]{subsubsection}

% graphics
\RequirePackage{graphicx}

% captions
\RequirePackage{caption} 
\captionsetup[figure]{%
  name=Abb,
  font=small,
  format=plain,
  justification=raggedright,
  singlelinecheck=false%
}

% tables
\RequirePackage{array}
\RequirePackage{multirow}
\RequirePackage{booktabs}
\RequirePackage{tabularx}
\newcolumntype{Y}{>{\centering\arraybackslash}X}           % centered column type for tabularx
\newcolumntype{P}[1]{>{\raggedright\arraybackslash}p{#1}}  % fixed width left-justified column

% lists
\RequirePackage[inline]{enumitem}
\setlist{leftmargin=*,nosep}            % global: no left indent, no vertical sep. for any list
\newlist{enumerateAlph}{enumerate}{1}   % enumerate with label=\alph) and (really) no left indent
\newlist{enumerateAlph*}{enumerate*}{1} 
\setlist[enumerateAlph,1]{label=\alph*),labelindent=-0.3em}
\setlist[enumerateAlph*,1]{label=\alph*),itemjoin=\quad}
\RequirePackage{multicol} 
\setlength\multicolsep{0pt}

% floats, figures, boxes...
\RequirePackage{float}

% ----------------------------------------------------------------
% custom commands and environments...
% ----------------------------------------------------------------
\newcommand*{\BZ}[1][1]{\par\vskip #1\baselineskip}  % 1 Blindzeile

% add empty pages
\newcommand*{\blankpage}{\null\thispagestyle{empty}\newpage}

% fill page from bottom to top
\newenvironment{bottompar}{\par\vspace*{\fill}}{\clearpage}

% tabbing without sep
\newenvironment{nstabbing}{%
  \setlength{\topsep}{0pt}%
  \setlength{\partopsep}{0pt}%
  \tabbing
}{%
  \endtabbing
}

% Struts for added vertical spacing in tabular environments
% Insert struts directly in nominator/denominator/sub-/superscripts of fractions/sums etc.!
\newcommand*\TStrut{\rule{0pt}{2.6ex}}       % Top strut
\newcommand*\BStrut{\rule[-1.2ex]{0pt}{0pt}} % Bottom strut
