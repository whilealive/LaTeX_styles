\setlength{\parindent}{0pt}

% fonts
\usepackage{lmodern}

% additional symbols etc.
\usepackage[babel=true]{microtype}
\usepackage{siunitx}
\sisetup{per-mode=symbol}
\usepackage{eurosym}
\usepackage{url}

% header/footer (KOMA-Script)
\usepackage[headsepline,plainheadsepline]{scrlayer-scrpage}
\pagestyle{scrheadings}
\setkomafont{pageheadfoot}{\normalfont}

% various KOMA script stuff
\RedeclareSectionCommand[beforeskip=2em,afterskip=1em]{section}
\RedeclareSectionCommand[beforeskip=2em]{subsection}
\RedeclareSectionCommand[beforeskip=1em,afterskip=1sp]{subsubsection}

% add empty pages
\usepackage{afterpage}
\newcommand\blankpage{
  \null
  \thispagestyle{empty}
\newpage}

% graphics
\usepackage{graphicx}

% captions
\usepackage{caption} 
\captionsetup[figure]{
  name=Abb,
  font=small,
  format=plain,
  justification=raggedright,
  singlelinecheck=false
}

% tables
\usepackage{array}
\usepackage{multirow}
\usepackage{booktabs}
\usepackage{tabularx}
\newcolumntype{Y}{>{\centering\arraybackslash}X}           % centered column type for tabularx
\newcolumntype{P}[1]{>{\raggedright\arraybackslash}p{#1}}  % fixed width left-justified column

% lists
\usepackage[inline]{enumitem}
\setlist{leftmargin=*,nolistsep}        % global: no left indent, no vertical sep. for any list
\newlist{enumerateAlph}{enumerate}{1}   % enumerate with label=\alph) and (really) no left indent
\setlist[enumerateAlph,1]{label=\alph*),labelindent=-0.3em}
\newlist{enumerateAlph*}{enumerate*}{1} 
\setlist[enumerateAlph*,1]{label=\alph*),itemjoin=\quad}
\usepackage{multicol} 
\setlength\multicolsep{0pt}

% floats, figures, boxes...
\usepackage{float}

% ----------------------------------------------------------------
% custom commands and environments...
% ----------------------------------------------------------------
\newcommand{\BZ}[1][1]{\vspace*{#1\baselineskip}}  % 1 Blindzeile

% Text auf Seite von unten nach oben
\newenvironment{bottompar}{\par\vspace*{\fill}}{\clearpage}

% tabbing without sep
\newenvironment{nstabbing}
{\setlength{\topsep}{0pt}%
  \setlength{\partopsep}{0pt}%
\tabbing}
{\endtabbing}

