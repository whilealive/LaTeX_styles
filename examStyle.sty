\newenvironment{ExamExerciseOnePage}[1]{
  \stepcounter{ExamExerciseCounter}
  \textbf{Aufgabe \theExamExerciseCounter \quad} [#1 Pkt] 
  \addtocounter{TotalOfPoints}{#1}}
