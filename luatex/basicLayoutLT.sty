\ProvidesPackage{basicLayoutLT}

% fonts
\RequirePackage{mathtools}       % to be loaded before unicode-math, will load fontspec
\RequirePackage{unicode-math}    % support opentype math fonts (load after mathtools!)
\RequirePackage{lucidaBrightOT}  % set fonts, kerning etc.

% language
\RequirePackage[ngerman]{babel}

% global settings
\setlength{\parindent}{0pt}
\allowdisplaybreaks

% typography, symbols etc.
\RequirePackage[babel=true]{microtype}
\RequirePackage{url}

% header/footer
\RequirePackage{fancyhdr}
\pagestyle{fancy}

% redefine sectional commands
\renewcommand\section{\@startsection
  {section}{1}{0mm}%
  {-2\baselineskip}%
  {2ex}%
  {\sffamily\Large\bfseries}%
}%
\renewcommand\subsection{\@startsection
  {subsection}{2}{0mm}%
  {-2\baselineskip}%
  {1ex}%
  {\sffamily\large\bfseries}%
}%
\renewcommand\subsubsection{\@startsection
  {subsubsection}{3}{0mm}%
  {-\baselineskip}%
  {1sp}%
  {\sffamily\normalsize\bfseries}%
}%

% floats, figures, captions...
\RequirePackage{graphicx}
\RequirePackage{float}
\RequirePackage{caption}
\captionsetup[figure]{%
  name=Abb,
  font=small,
  format=plain,
  justification=raggedright,
  singlelinecheck=false%
}

% tables
\RequirePackage{booktabs}
\RequirePackage{tabularx}                                  % loads array package
\newcolumntype{P}[1]{>{\raggedright\arraybackslash}p{#1}}  % tabular: fixed width left-justified column
\newcolumntype{C}[1]{>{\centering\arraybackslash}p{#1}}    % tabular: fixed width centered column
\newcolumntype{L}{>{\raggedright\arraybackslash}X}         % tabularx: left-justified column type for tabularx
\newcolumntype{Z}{>{\centering\arraybackslash}X}           % tabularx: centered column type for tabularx

% lists
\usepackage{tabto}
\usepackage{paralist}
%\setdefaultleftmargin{0em}{0em}{0em}{0em}{0em}{0em}
% horizontal enumeration in multiple columns. Taken from:
% http://tex.stackexchange.com/questions/89603/horizontal-enumeration-in-multiple-columns
\newenvironment{tabbedenum}[1]
 {\NumTabs{#1}\inparaenum[a)]\let\latexitem\item
 \def\item{\def\item{\tab\latexitem}\latexitem}}{\endinparaenum}

% units
\RequirePackage{siunitx}
\sisetup{per-mode=symbol}

