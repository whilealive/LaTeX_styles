% Enlarge \textwidth by 30mm, so that it is centered
\NewEnviron{FullWidth}
{
  \begin{addmargin*}[0mm]{-30mm}
    \BODY
  \end{addmargin*}
}

% HP Prime environment
\NewEnviron{TR}
{
  \begin{figure}[H]
    \begin{addmargin*}[0mm]{-30mm}
      \begin{mdframed}[linewidth=0pt, backgroundcolor=gray!40]
        \begin{minipage}[t][26.5mm][b]{0.165\linewidth} 
          \centering
          \includegraphics[width=13mm]{HP-Prime.png}
        \end{minipage}
        \hfill
        \begin{minipage}[t]{0.815\linewidth}
          \BODY
        \end{minipage}
      \end{mdframed}
    \end{addmargin*}
  \end{figure}
}

