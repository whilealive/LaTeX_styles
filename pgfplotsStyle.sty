\ProvidesPackage{pgfplotsStyle}

\RequirePackage{pgfplots}
\pgfplotsset{compat=newest}

\usetikzlibrary{arrows.meta}
\pgfplotsset{%
  axis lines=center,%
  axis line style={-Latex},%
}

\pgfplotsset{StandardSizedUnitVectors/.style={%
  x=7mm,y=7mm,%
  xtick distance=1, ytick distance=1,%
  axis line style={shorten >=-4mm, shorten <=-3mm},%
  xlabel style={above,at={(ticklabel* cs:1)},xshift=2.5mm},%
  ylabel style={right,at={(ticklabel* cs:1)},yshift=2.5mm},%
  xlabel={$x$}, ylabel={$y$},%
  grid=both,%
  }%
}
