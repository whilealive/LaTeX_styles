\ProvidesPackage{pgfplotsStyle}

\RequirePackage{pgfplots}
\pgfplotsset{compat=newest}

% set axis origin as: "axis line origin={-1,0},"
\pgfplotsset{%
  axis line origin/.style args={#1,#2}{%
    x filter/.append code={ % Check for empty or filtered out numbers
      \ifx\pgfmathresult\empty\else\pgfmathparse{\pgfmathresult-#1}\fi
    },
    y filter/.append code={%
      \ifx\pgfmathresult\empty\else\pgfmathparse{\pgfmathresult-#2}\fi
    },
    xticklabel=\pgfmathparse{\tick+#1}\pgfmathprintnumber{\pgfmathresult},
    yticklabel=\pgfmathparse{\tick+#2}\pgfmathprintnumber{\pgfmathresult}
  }
}


% Standard Graph
\newcommand*{\SetGraphDimensions}[5]
{%
  \pgfmathsetmacro{\Width}{#1}
  \pgfmathsetmacro{\Xmin}{#2}
  \pgfmathsetmacro{\Xmax}{#3}
  \pgfmathsetmacro{\Ymin}{#4}
  \pgfmathsetmacro{\Ymax}{#5}
  \pgfmathsetmacro{\UnitVectorLength}{\Width/(\Xmax-\Xmin+1)}
}
\pgfplotsset{StandardGraphStyle/.style={%
  xmin=\Xmin, xmax=\Xmax, ymin=\Ymin, ymax=\Ymax,
  x=\UnitVectorLength, y=\UnitVectorLength,
  axis lines=center,
  axis line style={shorten >=-.5*\UnitVectorLength, shorten <=-.5*\UnitVectorLength},
  xlabel style={above=2pt,at={(ticklabel* cs:1.0)},fill=white},
  ylabel style={right=2pt,at={(ticklabel* cs:1.0)},fill=white},
  xlabel={$x$}, ylabel={$y$},
  xtick distance=1, ytick distance=1,
  grid=major,%
  }%
}
