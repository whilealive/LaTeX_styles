\ProvidesPackage{basicPresentationStyle}

% theme
\usetheme{default}
\usecolortheme{default}
\usefonttheme{professionalfonts}
\beamertemplatenavigationsymbolsempty

% colors
\definecolor{title}{RGB}{35,90,20}
\setbeamercolor{titlelike}{fg=title}
\setbeamercolor{block title}{fg=title}
\setbeamercolor{block title example}{fg=title}
\setbeamercolor{enumerate item}{fg=title}
\setbeamercolor{itemize item}{fg=title}

% fonts
\RequirePackage[ngerman]{babel}
\RequirePackage[T1]{fontenc}
\RequirePackage[utf8x]{inputenc}
\RequirePackage{lmodern}

% typography
\RequirePackage{microtype}
\RequirePackage{nicefrac}
\RequirePackage{siunitx}
\RequirePackage{eurosym}

% drawings
\RequirePackage{tikz}
\usetikzlibrary{calc}
\tikzset{partial ellipse/.style args={#1:#2:#3}{insert path={+ (#1:#3) arc (#1:#2:#3)}}}

% math packages
\RequirePackage{mathtools}
\RequirePackage{amsfonts}
\RequirePackage{amssymb}
\RequirePackage{bm}

% various math stuff
\DeclarePairedDelimiter\abs{\lvert}{\rvert}  % mathtools: abs*{...} command

% tables, lists...
% don't load enumitem for beamer!
\RequirePackage{array}
\RequirePackage{tabularx}

% floats, figures, boxes...
\RequirePackage{float}

% frames
\RequirePackage[framemethod=tikz]{mdframed}
